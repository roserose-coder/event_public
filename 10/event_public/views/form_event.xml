<odoo>
    <data>
        <record model="ir.actions.act_window" id="event_public.action_window">
          <field name="name">event_public window</field>
          <field name="res_model">event_public.model_event</field>
          <field name="view_mode">tree,form,calendar,kanban,graph</field>
        </record>


        <record id="event_public.search" model="ir.ui.view">
           <field name="name">event_public search</field>
           <field name="model">event_public.model_event</field>
           <field name="arch" type="xml">
               <search string="Search Event">
                   <field name="event_name"/>
                       <filter string="Finished Event" name="finished_event" domain="[('end_time','&lt;=',datetime.datetime.now())]"/>
                       <filter string="On Going Event" name="On_going_Event"
                                domain="[('start_time', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                ('end_time', '&gt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59')) ]"/>

                       <filter string="Upcoming Event"  name="upcoming_event" domain="[('start_time', '&gt;=', datetime.datetime.now())]"/>

                    <searchpanel>
                      <field name="speaker" icon="fa fa-list" select="multi"/>
                         <field name="attendance" icon="fa fa-list" select="multi"/>

                    </searchpanel>
               </search>
           </field>
    </record>

        <record model="ir.ui.view" id="event_public.minimal_form">
              <field name="name">event_public minimal form</field>
              <field name="model">event_public.model_event</field>
              <field name="arch" type="xml">
                <form>

                  <sheet>

                      <group>

                          <field name="event_name"/>
                          <field name="speaker">
                              <tree>
                                 <field name="name"/>
                              </tree>
                          </field>
                      </group>


                  </sheet>

                </form>
              </field>
            </record>

        <record model="ir.ui.view" id="event_public.form">
              <field name="name">event_public form</field>
              <field name="model">event_public.model_event</field>
              <field name="arch" type="xml">
                <form>
                    <group>
                          <header>
                         <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                            </header>
                    </group>
                  <sheet>

                      <group>
                          <field name="image_1920"  widget="image" options="{'preview_image': 'image_128'}" />
                          <field name="event_name"/>
                          <field name="company_id"/>
                          <field name="website_id"/>
                      </group>

                      <group>
                          <field name="start_time"/>
                          <field name="end_time"/>
                      </group>
                      <group>
                          <notebook>
                              <page string="Speaker">
                                  <field name="speaker">
                                      <tree>
                                          <field name="name"/>
                                      </tree>
                                  </field>

                              </page>

                              <page string="Attendance">
                                  <field name="attendance">
                                      <tree>
                                          <field name="name"/>
                                          <field name="street"/>
                                          <field name="phone"/>
                                      </tree>
                                  </field>
                              </page>

                              <page string ="Rating">
                                  <field name="rates">
                                      <tree>

                                          <field name="name"/>
                                              <field name="address"/>
                                          <field name="rate"  avg="Average of the rates"/>
                                      </tree >
                                  </field>
                              </page>
                          </notebook>
                      </group>
                      <group>
                          <field name="description"/>
                      </group>
                  </sheet>
                      <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>`
                    </div>
                </form>
              </field>
            </record>


        <record id="event_public.calendar" model="ir.ui.view">
                <field name="name">event_public calendar</field>
                <field name="model">event_public.model_event</field>
                <field name="arch" type="xml">

                    <calendar
                            string="Event details"
                            date_start="start_time"
                            date_stop="end_time"
                            event_open_popup="true"
                            mode="month"
                            quick_add="False">
                        <field name="event_name"/>

                    </calendar>
                </field>
        </record>
        <record model="ir.ui.view" id="event_public.tree">
              <field name="name">event_public tree</field>
              <field name="model">event_public.model_event</field>
              <field name="arch" type="xml">
                  <tree>

                      <field name="event_name"/>
                      <field name="start_time"/>
                      <field name="end_time"/>
                  </tree>

              </field>
            </record>


        <record id="event_public.kanban" model="ir.ui.view">
            <field name="name">event_public kanban</field>
            <field name="model">event_public.model_event</field>
            <field name="arch" type="xml">

                <kanban class="o_res_partner_kanban"  default_group_by="stage_id"
                    quick_create_view="event_public.minimal_form"
                     on_create="quick_create"

                >
                    <field name="id"/>
                    <field name="stage_id" />

<!--                    image_1920 = fields.Image('Event Image')-->
<!--    event_name = fields.Char('Event Name')-->
<!--    description = fields.Html('Description')-->
<!--    start_time = fields.Datetime(default=fields.Datetime.now)-->
<!--    end_time = fields.Datetime(default=fields.Datetime.now)-->
                    <field name="image_1920"/>
                    <field name="event_name"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <templates>
                        <t t-name="kanban-box">
                              <div t-attf-class="oe_kanban_global_click">
                                   <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            </t>
                                            <t t-if="widget.deletable">
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </t>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                  <div class="oe_kanban_content">
                                       <div class="oe_kanban_card oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                 <img alt="Avatar" t-att-src="kanban_image('event_public.model_event', 'image_1920',record.id.raw_value)"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <strong class="o_kanban_record_title">
                                                    <field name="event_name"/>
                                                    <field name="start_time"/>
                                                    <field name="end_time"/>
                                                </strong>

                                            </div>

                                       </div>
                                  </div>
                              </div>





                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="event_public.graph">
           <field name="name">event_public graph</field>
           <field name="model">event_public.model_event</field>
           <field name="type">graph</field>
           <field name="arch" type="xml">
                 <graph string="Attendance Count"  type="bar" stacked="True">
                     <field name="event_name" />
                        <field name="attendance_count" operator="+"/>
<!--                      <field name="material_id" group="True"/>-->


                </graph>
            </field>
        </record>
        <menuitem name="event_public" id="event_public.menu_root"  action="event_public.action_window" />
    </data>
</odoo>